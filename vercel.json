{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@latest"
    }
  ],
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "public/build/$1"
    },
    {
      "src": "/(css|js|images|fonts|storage)/(.*)",
      "dest": "public/$1/$2"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.php"
    }
  ]
}
